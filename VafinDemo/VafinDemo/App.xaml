<Application x:Class="VafinDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VafinDemo"
             StartupUri="Windows/AutorizationWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Candara"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Candara"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Candara"></Setter>
            <Setter Property="Background" Value="#A5E887"></Setter>
        </Style>
    </Application.Resources>
</Application>
